<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name , placeholder: "new category" , label: "Add a New Category"%>
  </div>

  <div class="form-actions">
    <%= f.submit "Add Category",class: "btn btn-default"%>
  </div>
<% end %>
