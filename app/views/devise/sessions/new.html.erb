
<% content_for :head do  %>
<% stylesheet_link_tag 'sessions', media: 'all', 'data-turbolinks-track' => true %>
<style type="text/css">
body{
background-color: #2e4858 !important;
}
.log_in_container{

color: #2e4858 !important; !important;
}
</style>
  <div class="log_in_container">
    <h2>Sign In</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign in" %>
      <%= link_to "Sign Up", new_user_registration_path, class:"btn btn-default" %>
    </div>
  <% end %>
  </div>
  <div class="footer">
  <p>WeDo - Lifes To Do List App</p>
  </div>

<% end %>