<!DOCTYPE html>
<html>
<%= yield :head %>
<head>

  <title>Wedo</title>
  <link href='https://fonts.googleapis.com/css?family=Gloria+Hallelujah' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if current_user %>
		<%= render 'layouts/header' %>
	<!-- the next line is where the Big yellow skicky note pops up -->
		<%= render 'layouts/overlayDiv' %>

		<div class="row">
			<div class="col-md-3 left_column">
		<!-- this is a partal for the sticky notes on the fridge -->
				<%= render 'layouts/fridgeNotes'%>	
			</div>
			<div class="col-md-9">
		<!-- <div class="container"> -->
				<%= yield %>
		<!-- </div> -->
			</div>
			<div class="footer">
				<p>
				Wedo - Lifes To Do List App 
				</p>
			</div>
		</div>
	<% end %>
</body>
</html>
